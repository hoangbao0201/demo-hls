  <body>
    <div class="w-full h-screen">
      <!-- <video id="video" class="w-full h-full" controls autoplay playsinline src="https://web.lotuscdn.vn/2024/3/21/2bb16dca1692fe4e6add2c6942c016dd_1711029713662-h6cidmf7uo.mp4"></video> -->
