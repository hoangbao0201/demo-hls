    <!-- <%- include('./components/partials/header/index.ejs'); -%> -->

    <script>
      var video = document.getElementById('video');
      // var videoSrc = '192.168.20.13:5000/videos/segment.m3u8';
      var videoSrc = `https://demo-hls.adaptable.app/videos/segment.m3u8`;
      // var videoSrc = '';
      if (Hls.isSupported()) {
        var hls = new Hls();
        hls.loadSource(videoSrc);
        hls.attachMedia(video);
      } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
        video.src = videoSrc;
      }
    </script>
  </body>
</html>
